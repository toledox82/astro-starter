{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*", ".prettierrc"],
	"exclude": ["dist"],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@*": ["src/*"]
		},
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		]
	}
}
