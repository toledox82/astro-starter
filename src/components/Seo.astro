---
import config from '@data/config.json'
const isHomePage = Astro.url.pathname === '/'
let { title, description, url = Astro.url, image, type, frontmatter, noindex } = Astro.props
title = isHomePage ? `${config.siteName} ${config.separator} ${config.title}` : `${title}`
description = isHomePage ? `${config.description}` : `${description}`
---

<title>{title || config.title}</title>
<meta name="description" content={description || config.description} />

<!-- SEO -->
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:site_name" content={config.siteName} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description || config.description} />
<meta property="og:type" content={type || 'website'} />
<meta property="og:url" content={url} />
<meta property="og:image" content={image || config.image.src} />
<meta property="og:image:url" content={image || config.image.src} />
<meta property="og:image:secure_url" content={image || config.image.src} />
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={image?.alt || config.image.alt} />

<!-- Twitter -->
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description || config.description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={image || config.image.src} />
<meta name="twitter:image:alt" content={title} />
<meta name="twitter:domain" content={import.meta.env.SITE} />

<!-- Robots -->
{noindex && <meta name="robots" content="noindex, nofollow" />}
